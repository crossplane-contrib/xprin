{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  extends: [
    'config:recommended',
    'helpers:pinGitHubActionDigests',
    ':semanticCommits',
  ],
  ignorePresets: [
    ':ignoreModulesAndTests',
  ],
  rebaseWhen: 'conflicted',
  prConcurrentLimit: 5,
  baseBranchPatterns: [
    'main',
  ],
  postUpdateOptions: [
    'gomodTidy',
    'gomodUpdateImportPaths',
  ],
  labels: [
    'automated',
  ],
  customManagers: [
    {
      customType: 'regex',
      description: 'Bump Earthly version in GitHub workflows',
      managerFilePatterns: [
        '/^\\.github\\/workflows\\/[^/]+\\.ya?ml$/',
      ],
      matchStrings: [
        "EARTHLY_VERSION: '(?<currentValue>.*?)'\\n",
      ],
      datasourceTemplate: 'github-releases',
      depNameTemplate: 'earthly/earthly',
      extractVersionTemplate: '^v(?<version>.*)$',
    },
    {
      customType: 'regex',
      description: 'Bump Go version in Earthfile',
      managerFilePatterns: [
        '/^Earthfile$/',
      ],
      matchStrings: [
        'ARG --global GO_VERSION=(?<currentValue>.*?)\\n',
      ],
      datasourceTemplate: 'golang-version',
      depNameTemplate: 'golang',
    },
    {
      customType: 'regex',
      description: 'Bump golangci-lint version in the Earthfile',
      managerFilePatterns: [
        '/^Earthfile$/',
      ],
      matchStrings: [
        'ARG GOLANGCI_LINT_VERSION=(?<currentValue>.*?)\\n',
      ],
      datasourceTemplate: 'github-releases',
      depNameTemplate: 'golangci/golangci-lint',
    },
    {
      customType: 'regex',
      description: 'Bump E2E Crossplane v1 version in Earthfile',
      managerFilePatterns: [
        '/^Earthfile$/',
      ],
      matchStrings: [
        'ARG --global E2E_CROSSPLANE_V1=(?<currentValue>.*?)\\n',
      ],
      datasourceTemplate: 'github-releases',
      depNameTemplate: 'crossplane/crossplane-e2e-v1',
      packageNameTemplate: 'crossplane/crossplane',
      extractVersionTemplate: '^v(?<version>.*)$',
    },
    {
      customType: 'regex',
      description: 'Bump E2E Crossplane v2 version in Earthfile',
      managerFilePatterns: [
        '/^Earthfile$/',
      ],
      matchStrings: [
        'ARG --global E2E_CROSSPLANE_V2=(?<currentValue>.*?)\\n',
      ],
      datasourceTemplate: 'github-releases',
      depNameTemplate: 'crossplane/crossplane-e2e-v2',
      packageNameTemplate: 'crossplane/crossplane',
      extractVersionTemplate: '^v(?<version>.*)$',
    },
    {
      customType: 'jsonata',
      description: 'Bump Crossplane provider versions in crossplane.yaml spec.dependsOn',
      fileFormat: 'yaml',
      managerFilePatterns: [
        '/^examples\\/(aws|gcp|base)\\/crossplane\\.yaml$/',
      ],
      matchStrings: [
        'spec.dependsOn.{ "depName": package, "currentValue": version, "depType": "provider" }',
      ],
      datasourceTemplate: 'docker',
    },
  ],
  dockerfile: {
    managerFilePatterns: [
      '/(^|/)Earthfile$/',
    ],
  },
  crossplane: {
    managerFilePatterns: [
      '/(^|/)examples/(aws|gcp|base)/.*\\.yaml$/',
    ],
  },
  vulnerabilityAlerts: {
    enabled: true,
  },
  osvVulnerabilityAlerts: true,
  packageRules: [
    {
      matchManagers: [
        'crossplane',
        'custom.jsonata',
      ],
      matchFileNames: [
        'examples/aws/**',
        'examples/gcp/**',
        'examples/base/**',
      ],
      groupName: 'example-manifests',
    },
    {
      description: 'E2E Crossplane v1 (Earthfile): only 1.x',
      matchDepNames: [
        'crossplane/crossplane-e2e-v1',
      ],
      allowedVersions: '^1\\.',
      ignoreUnstable: true,
    },
    {
      description: 'Only get Docker image updates every 2 weeks to reduce noise',
      matchDatasources: [
        'docker',
      ],
      schedule: [
        'every 2 week on monday',
      ],
      enabled: true,
    },
    {
      description: 'Ignore k8s.io/client-go older versions, they switched to semantic version and old tags are still available in the repo',
      matchDatasources: [
        'go',
      ],
      matchDepNames: [
        'k8s.io/client-go',
      ],
      allowedVersions: '<1.0',
    },
    {
      description: 'Ignore k8s dependencies, should be updated on crossplane-runtime',
      matchDatasources: [
        'go',
      ],
      enabled: false,
      matchPackageNames: [
        'k8s.io{/,}**',
        'sigs.k8s.io{/,}**',
      ],
    },
    {
      description: 'Only get dependency digest updates every month to reduce noise, except crossplane-runtime',
      matchDatasources: [
        'go',
      ],
      matchUpdateTypes: [
        'digest',
      ],
      extends: [
        'schedule:monthly',
      ],
      matchPackageNames: [
        '!github.com/crossplane/crossplane-runtime',
      ],
    },
    {
      description: 'Group crossplane v2 and crossplane-runtime v2 (go.mod)',
      matchPackageNames: [
        'github.com/crossplane/crossplane/v2',
        'github.com/crossplane/crossplane-runtime/v2',
      ],
      groupName: 'Crossplane v2',
    },
    {
      description: 'Group E2E_CROSSPLANE_V2 (Earthfile) with crossplane v2 go.mod updates',
      matchDepNames: [
        'crossplane/crossplane-e2e-v2',
      ],
      groupName: 'Crossplane v2',
    },
    {
      description: 'Group all go version updates',
      matchDatasources: [
        'golang-version',
      ],
      groupName: 'golang version',
    },
  ],
}
